            <Button Content="Resize" Canvas.Left="200" Canvas.Top="-339" Width="301" Height="166" Click="Resize_Click" Name="Resize"/>
            <Button Content="Move" Canvas.Left="550" Canvas.Top="-339" Width="301" Height="166" Click="Move_Click" Name="Move"/>
            <Button Content="Elipse" Canvas.Left="-600" Canvas.Top="-139" Width="301" Height="166" Click="Button_Click" Name="Elipse"/>
            <Button Content="Rectangle" Canvas.Left="-200" Canvas.Top="-139" Width="301" Height="166" Click="Button_Click_1" Name="Rectangle"/>
            <Button Content="Ornament" Canvas.Left="200" Canvas.Top="-139" Width="301" Height="166" Click="Ornament_Click" Name="Ornament"/>
            <Button Content="Group" Canvas.Left="550" Canvas.Top="-139" Width="301" Height="166" Click="Group_Click" Name="Group"/>
        </Canvas>
        <Canvas HorizontalAlignment="Left" AllowDrop="True" Height="100" Margin="432,1000,0,0" VerticalAlignment="Top" Width="100" Name="paintSurface" Opacity="0" PointerPressed="Ink_canvas_PointerPressed">
            <!--<Label Content="{Binding EntityName}" MouseDown="{Binding DoSomething}"/>-->
