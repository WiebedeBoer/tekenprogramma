        <Canvas Height="300" Width="200" Name="front_canvas" Grid.Row="1"  Grid.Column="0" PointerMoved="Front_canvas_PointerMoved" Background="#FF1139C3">
            <Button Content="Undo" Canvas.Left="-600" Canvas.Top="-539" Width="301" Height="166" Click="Undo_Click" Name="Undo"/>
            <Button Content="Redo" Canvas.Left="-200" Canvas.Top="-539" Width="301" Height="166" Click="Redo_Click" Name="Redo"/>
            <Button Content="Save" Canvas.Left="-600" Canvas.Top="-339" Width="301" Height="166" Click="Save_Click" Name="Save"/>
